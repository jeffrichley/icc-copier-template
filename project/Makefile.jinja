.PHONY: format lint test checkit coverage-check

format: ## Format code
	uv run black .
	uv run ruff check . --fix

lint: ## Lint code
	uv run ruff check .

test: ## Run tests
	uv run pytest tests/ -v

checkit: ## Run lint, tests, coverage check
	make format
	make lint
	make test
	uv run python scripts/check_coverage.py

coverage-check: ## Run coverage check only
	uv run python scripts/check_coverage.py


docs:
	uv run sphinx-build -b html docs/ docs/_build/html
serve-docs:
	uv run mkdocs serve
